/**index.wxss**/
page{
  height:100%;
  overflow: hidden;
}
.bg {
  width: 100%;
  height: 100%;
}
ec-canvas {
  width: 100%;
  height: 60%;
  overflow: hidden;
}
.line-weath {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  padding:50rpx 10rpx;
  flex-direction: row;
  flex-wrap:wrap;
  align-items:flex-start;
  justify-content:space-around;
  align-content: space-between;
  overflow: hidden;
} 
.sdate{
  height:200rpx;
  width:160rpx;
  /* border:1rpx solid; */
  margin-bottom:100rpx;
  background: -webkit-linear-gradient(top,#ffffff 0,#d7fffe 100%);
  background: -moz-linear-gradient(top,#ffffff 0,#d7fffe 100%);     
  background: -o-linear-gradient(top,#ffffff 0,#d7fffe 100%);       
  background: linear-gradient(to bottom,#ffffff 0,#d7fffe 100%);  
  font-size:25rpx;
  text-align: center;
  padding:10rpx 0;
}
.sdate image{
  display: block;
  width:50rpx;
  margin:15rpx auto;
  height:50rpx;
}